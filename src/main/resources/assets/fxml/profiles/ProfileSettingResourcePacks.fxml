<?import com.jfoenix.controls.JFXListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<StackPane fx:id="root" xmlns:fx="http://javafx.com/fxml/1"
           xmlns="http://javafx.com/javafx/2.2"
           fx:controller="net.wheatlauncher.control.profiles.ControllerProfileResourcePack">
    <VBox maxWidth="Infinity">
        <HBox spacing="10" style="-fx-padding:10" maxWidth="Infinity">
            <VBox alignment="CENTER" style="-fx-background-color:WHITE;" prefWidth="300">
                <StackPane style=" -fx-padding:5;" styleClass="major">
                    <Label text="%setting.resourcepacks.available"
                           style="-fx-text-fill:WHITE;-fx-font-weight:BOLD;-fx-font-size:14;"
                           styleClass="column-header"/>
                </StackPane>
                <JFXListView fx:id="availableView" maxHeight="250" prefWidth="300" maxWidth="Infinity"
                             styleClass="thin-scroll-bar"/>
            </VBox>
            <VBox alignment="CENTER" style="-fx-background-color:WHITE;" prefWidth="300">
                <StackPane style="-fx-padding:5;" styleClass="major">
                    <Label text="%setting.resourcepacks.selecting"
                           style="-fx-text-fill:WHITE;-fx-font-weight:BOLD;-fx-font-size:14;"/>
                </StackPane>
                <JFXListView fx:id="selectedView" maxHeight="250" prefWidth="300" maxWidth="Infinity"
                             styleClass="thin-scroll-bar"/>
            </VBox>
        </HBox>
    </VBox>
</StackPane>
