<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXListView?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2"
           fx:controller="net.wheatlauncher.control.settings.ControllerResourcePack">
    <VBox alignment="CENTER" spacing="10">
        <JFXListView fx:id="resourcePacks" prefHeight="300" prefWidth="400"/>
        <HBox alignment="CENTER" spacing="10">
            <JFXButton fx:id="importBtn" text="%setting.resourcepacks.import" styleClass="options-button"
                       style="-fx-max-width:150"/>
            <JFXTextField fx:id="search" promptText="Search Resource Packs..."/>
            <JFXButton fx:id="exportBtn" text="%setting.resourcepacks.export" styleClass="options-button"
                       style="-fx-max-width:150"/>
        </HBox>
    </VBox>
</StackPane>
