<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXSlider?>
<?import de.jensd.fx.fontawesome.Icon?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import net.wheatlauncher.control.utils.ColorTransitionButton?>
<?import com.jfoenix.controls.JFXTextField?>
<VBox fx:id="root" alignment="CENTER" spacing="15" style="-fx-background-color:WHITE; -fx-padding:10;"
      xmlns="http://javafx.com/javafx/8.0.71" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="net.wheatlauncher.control.profiles.ControllerCommonSetting">
    <GridPane hgap="5" vgap="20">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25" halignment="LEFT"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="65" halignment="CENTER"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="10" halignment="RIGHT"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="40.0" vgrow="SOMETIMES"/>
        </rowConstraints>

        <Label text="%setting.minecraftLocation" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <JFXTextField fx:id="minecraftLocation" GridPane.columnIndex="1" GridPane.rowIndex="0" editable="false"/>
        <ColorTransitionButton fx:id="browsMinecraft" style="-fx-padding:3,3,3,3; -fx-background-color:TRANSPARENT;"
                               GridPane.columnIndex="2" GridPane.rowIndex="0">
            <graphic>
                <Icon awesomeIcon="FILE" scaleX="0.8" scaleY="0.8"/>
            </graphic>
        </ColorTransitionButton>

        <Label text="%setting.javaLocation" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <JFXTextField fx:id="javaLocation" GridPane.columnIndex="1" GridPane.rowIndex="1" editable="false"/>
        <ColorTransitionButton fx:id="browsJava" style="-fx-padding:3,3,3,3; -fx-background-color:TRANSPARENT;"
                               GridPane.columnIndex="2" GridPane.rowIndex="1">
            <graphic>
                <Icon awesomeIcon="FILE" scaleX="0.8" scaleY="0.8"/>
            </graphic>
        </ColorTransitionButton>

        <Label text="%setting.memory" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <JFXSlider fx:id="memory" majorTickUnit="256" max="3072" min="256" minorTickCount="0" showTickMarks="true"
                   snapToTicks="true" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

        <Label text="%setting.resolution" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <JFXSlider fx:id="resolution" majorTickUnit="1" max="5" minorTickCount="0" showTickMarks="true"
                   snapToTicks="true" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
        </VBox.margin>
    </GridPane>
</VBox>
