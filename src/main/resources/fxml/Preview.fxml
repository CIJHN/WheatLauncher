<?import com.jfoenix.controls.JFXDialog?>
<?import de.jensd.fx.fontawesome.Icon?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.*?>
<?import moe.mickey.minecraft.skin.fx.SkinCanvas?>
<?import net.wheatlauncher.control.*?>
<StackPane fx:id="rroot" xmlns:fx="http://javafx.com/fxml/1"
           onMouseClicked="#onClick" alignment="TOP_RIGHT"
           style="-fx-padding:0,0,10,10; -fx-background-color:WHITESMOKE; -fx-border-color:TOMATO;"
           xmlns="http://javafx.com/javafx/2.2">
    <HBox fx:id="root" style="-fx-padding:5,5">
        <VBox fx:id="leftBox" prefWidth="200" maxWidth="400" spacing="10" alignment="CENTER"
              style="-fx-padding:15,5; -fx-background-color:BROWN">
            <Label fx:id="player" style="-fx-font-size: 16.0px;-fx-text-fill: rgba(0.0, 0.0, 0.0, 0.87);"/>
            <SkinCanvas fx:id="canvas" width="150" height="250" depth="4"/>
            <BorderPane>
                <left>
                    <ColorTransitionButton fx:id="setting" maxHeight="10" buttonType="RAISED"
                                           onAction="#popupSetting">
                        <tooltip>
                            <Tooltip text="%tooltip.setting"/>
                        </tooltip>
                        <graphic>
                            <Icon awesomeIcon="GEAR" scaleX="1.3" scaleY="1.3" style="-fx-font-family:FontAwesome;"/>
                        </graphic>
                    </ColorTransitionButton>
                </left>
                <center>
                    <ColorTransitionButton fx:id="profileName" buttonType="RAISED">
                        <tooltip>
                            <Tooltip text="%tooltip.switchprofile"/>
                        </tooltip>
                    </ColorTransitionButton>
                </center>
                <right>
                    <ColorTransitionButton fx:id="switchPlayer" maxHeight="10" buttonType="RAISED"
                                           onAction="#popupLogin">
                        <tooltip>
                            <Tooltip text="%tooltip.switchaccount"/>
                        </tooltip>
                        <graphic>
                            <Icon awesomeIcon="USER" scaleX="1.3" scaleY="1.3" style="-fx-font-family:FontAwesome;"/>
                        </graphic>
                    </ColorTransitionButton>
                </right>
            </BorderPane>
        </VBox>
        <StackPane fx:id="rightBox" prefWidth="400" alignment="BOTTOM_RIGHT" style="-fx-padding:17,10">
            <ColorTransitionButton fx:id="launch" buttonType="RAISED" text="LAUNCH" style="-fx-padding:0,100,0,100"
                                   prefWidth="110"
                                   prefHeight="50"/>
        </StackPane>

        <JFXDialog fx:id="settingDialog"/>
        <JFXDialog fx:id="loginDialog"/>

        <!--<fx:include fx:id="settingDialog" source="Setting.fxml"/>-->
    </HBox>
    <ColorTransitionButton fx:id="close" prefHeight="40" prefWidth="40"
                           onMouseClicked="#onClose"
                           hoverColor="red" transitionDuration="200ms" style="-fx-background-radius:0">
        <graphic>
            <Icon awesomeIcon="CLOSE" scaleX="1.3" scaleY="1.3" style="-fx-font-family:FontAwesome;"/>
        </graphic>
    </ColorTransitionButton>
</StackPane>
